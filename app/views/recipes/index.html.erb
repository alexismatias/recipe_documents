<p style="color: green"><%= notice %></p>


<div id="recipes" class="container">
  <h1>Recipes</h1>
<%= link_to "New Recipe", new_recipe_path, :class => "btn btn-primary" %>

  <div class="row pt-5">
  <% @recipes.each do |recipe| %>
    <div class="col-md-3 mb-4">
      <div class="recipe-card">
         <div class="w-100">
            <%= image_tag recipe.image.url, class: "recipe-index" if recipe.image? %>

            <%= render recipe %>
        </div>
          <p>
            <%= link_to "View Recipe", recipe, :class => "btn btn-primary"%>
          </p>
      </div><!-- recipe-card-->
      </div><!--col-md-3-->
  <% end %>
</div><!-- row-->
</div>

